# Database
DATABASE_URL=postgresql://...

# Hume AI
NEXT_PUBLIC_HUME_API_KEY=your_hume_client_id
HUME_SECRET_KEY=your_hume_client_secret
NEXT_PUBLIC_HUME_CONFIG_ID=your_hume_config_id

# Stack Auth
NEXT_PUBLIC_STACK_PROJECT_ID=your_stack_project_id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_stack_publishable_key
STACK_SECRET_SERVER_KEY=your_stack_secret_key

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Shopify Storefront API (for cart and checkout)
# Get these from: Shopify Admin → Settings → Apps → Develop apps → Create an app
# Then: Configure Storefront API scopes → Install app → Get token
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STOREFRONT_TOKEN=your_storefront_access_token
